@model FERIA.CLASES.Proceso
@{
    ViewBag.Title = "Postular a Proceso";
    Layout = "~/Views/Shared/_Interno.cshtml";
    if (ViewBag.Exito == null)
    {
        ViewBag.Exito = false;
    }
    if (ViewBag.Mensaje == null)
    {
        ViewBag.Mensaje = "";
    }
    FERIA.FRONT.NEGOCIO.ServicioProducto servicioProducto = new FERIA.FRONT.NEGOCIO.ServicioProducto();
    FERIA.CLASES.Usuario Login = FERIA.FRONT.Helper.Autenticacion.TraerUsuarioAutenticado();
    var productos = servicioProducto.Listar(Login.IdUsuario, Login.SesionId);
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Postular a Proceso</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Sistema")">Inicio</a>
            </li>
            @*<li class="breadcrumb-item">
                    <a>Forms</a>
                </li>*@
            <li class="breadcrumb-item active">
                <strong>Postulando a Proceso</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <form role="form" name="frmOferta" id="frmOferta" method="post" action="@Url.Action("ProcesoPostular", "Proceso", new FERIA.FRONT.Models.Proceso())" autocomplete="off">
                @Html.AntiForgeryToken()
                <input type="hidden" name="IdProceso" id="IdProceso" value="@Model.IdProceso" />
                <input type="hidden" name="IdUsuario" id="IdUsuario" value="@Model.IdUsuario" />
                <div class="row">
                    <div class="col-lg-12">
                        <div class="ibox ">
                            <div class="ibox-title">
                                <h5>@ViewBag.Title</h5>
                            </div>
                            <div class="ibox-content">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <h3 class="m-t-none m-b">Datos del Proceso</h3>
                                        <p>Información del Proceso</p>
                                        <div class="form-row">
                                            <div class="form-group col-lg-4">
                                                <label>Fecha Inicio</label>
                                                <input type="text" name="FechaProceso" id="FechaProceso" class="form-control disabled" readonly value="@Model.FechaProceso.ToString("dd/MM/yyyy")" required />
                                            </div>
                                            <div class="form-group col-lg-4">
                                                <label>Fecha Termino</label>
                                                <input type="text" name="FechaFinProceso" id="FechaFinProceso" class="form-control disabled" readonly value="@Model.FechaFinProceso.ToString("dd/MM/yyyy")" required />
                                            </div>
                                            <div class="form-group col-lg-4">
                                                <label>N° Orden</label>
                                                <input type="text" name="IdOrden" id="IdOrden" class="form-control disabled" readonly value="@Model.IdOrden" required />
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-lg-4">
                                                <label>Tipos</label>
                                                <input type="text" name="Tipos" id="Tipos" class="form-control disabled" readonly value="@Model.Orden.DetalleOrden.Count" required />
                                            </div>
                                            <div class="form-group col-lg-4">
                                                <label>Cantidad Total (KG)</label>
                                                <input type="text" name="Cantidad" id="Cantidad" class="form-control disabled" readonly value="@Model.Orden.DetalleOrden.Sum(x => x.Cantidad)" required />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <h3>Detalle de lo Solicitado</h3>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table class="table table-striped table-responsive-lg">
                                            <thead>
                                                <tr>
                                                    <th>Categoría</th>
                                                    <th>Cantidad Requerida (KG)</th>
                                                    <th>Stock Disponible (KG)</th>
                                                    <th>Valor Unitario(KG)</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    int ix = 0;
                                                    foreach (var item in Model.Orden.DetalleOrden)
                                                    {
                                                        var existe = productos.Productos.Exists(x => x.TipoVenta.Equals("Extranjera") && x.IdCategoria.Equals(item.IdCategoria) && x.Stock != 0);
                                                        string Mensaje = "Califica";
                                                        string icono = "fa-check";
                                                        string btn = "btn-primary";
                                                        FERIA.CLASES.Producto producto = new FERIA.CLASES.Producto();
                                                        if (!existe)
                                                        {
                                                            if (!productos.Productos.Exists(x => x.TipoVenta.Equals("Extranjera") && x.IdCategoria.Equals(item.IdCategoria)))
                                                            {
                                                                Mensaje = "No posee la fruta";
                                                            }
                                                            else
                                                            {
                                                                if (productos.Productos.Exists(x => x.TipoVenta.Equals("Extranjera") && x.Stock.Equals(0) && x.IdCategoria.Equals(item.IdCategoria)))
                                                                {
                                                                    Mensaje = "No tienes stock de esta fruta";
                                                                }
                                                            }

                                                            icono = "fa-close";
                                                            btn = "btn-danger";
                                                        }
                                                        else
                                                        {
                                                            producto = productos.Productos.FirstOrDefault(x => x.TipoVenta.Equals("Extranjera") && x.IdCategoria.Equals(item.IdCategoria) && x.Stock != 0);
                                                        }
                                                        <tr>
                                                            <td>@item.NombreCategoria (@item.NombreIngles)</td>
                                                            <td>@item.Cantidad</td>
                                                            @if (existe)
                                                            {
                                                                int stock = producto.Stock;
                                                                if (stock >= item.Cantidad)
                                                                {
                                                                    stock = item.Cantidad;
                                                                }
                                                                <td>
                                                                    <input type="hidden" name="DetalleOferta[@ix].IdProducto" value="@producto.IdProducto" />
                                                                    <input type="number" name="DetalleOferta[@ix].Cantidad" min="1" max="@stock" value="@stock" class="form-control" />
                                                                </td>
                                                                <td><input type="number" name="DetalleOferta[@ix].ValorUnitario" class="form-control" value="@producto.ValorUnitario" /></td>
                                                                ix = ix +  1;
                                                            }
                                                            else
                                                            {
                                                                <td colspan="2"><i class="fa @icono @btn btn-circle"></i> @Mensaje</td>
                                                            }
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class=" pull-right ">
                                            <button class="btn btn-default" type="button" onclick="location.href = '@Url.Action("Postular", "Proceso")';"><i class="fa fa-backward"></i><span class="bold"> Volver</span></button>
                                            <button class="btn btn-primary" type="button" onclick="fncSubmit();"><i class="fa fa-save"></i><span class="bold"> Postular</span></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        function fncSubmit() {
            swal({
                title: "¿Confirma la operación?",
                text: "Esta a punto de enviar una oferta al proceso seleccionado ¿Desea continuar?",
                type: "info",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Confirmar",
                closeOnConfirm: false
            }, function (isConfirm) {
                if (isConfirm) {
                    swal.close();
                    $("#loading").show();                    
                    document.frmOferta.submit();
                }
            });
        }
    </script>
    @if (ViewBag.Mensaje != "")
    {
        <script>
        swal({
            title: ("@ViewBag.Exito" != "False") ? "Felicidades!" :"Error!",
            text: fncReemplazaTilde("@ViewBag.Mensaje"),
            type: ("@ViewBag.Exito" != "False") ? "success" :"error"
        });
        </script>
    }

}