@model List<FERIA.CLASES.Proceso>
@{
    ViewBag.Title = "Proceso";
    Layout = "~/Views/Shared/_Interno.cshtml";
    if (ViewBag.Exito == null)
    {
        ViewBag.Exito = false;
    }
    if (ViewBag.Mensaje == null)
    {
        ViewBag.Mensaje = "";
    }
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Procesos para Postular</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Sistema")">Inicio</a>
            </li>
            @*<li class="breadcrumb-item">
                    <a>Forms</a>
                </li>*@
            <li class="breadcrumb-item active">
                <strong>Listado de Procesos</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <!--GRILLA DE RESULTADOS-->
            <div class="row">
                <div class="col-lg-12">
                    @if (Model.Count > 0)
                    {
                        <div class="ibox ">
                            <div class="ibox-title">
                                <h5>Resultado de Búsqueda </h5>
                            </div>
                            <div class="ibox-content">
                                <table class="table table-striped table-responsive-lg">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Fecha Inicio</th>
                                            <th>Fecha Término</th>
                                            <th>Orden</th>
                                            <th>Tipos</th>
                                            <th>Cantidad (KG)</th>
                                            <th>Postulaciones</th>
                                            <th>Accion</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (FERIA.CLASES.Proceso item in Model)
                                        {
                                            <tr>
                                                <td>@item.IdProceso </td>
                                                <td>@item.FechaProceso.ToString("dd-MM-yyyy")</td>
                                                <td>@item.FechaFinProceso.ToString("dd-MM-yyyy")</td>
                                                <td>@item.IdOrden   </td>
                                                <td>@item.Orden.DetalleOrden.Count </td>
                                                <td>@item.Orden.DetalleOrden.Sum(x => x.Cantidad) </td>
                                                <td>@item.Ofertas.Count </td>
                                                <td>
                                                    <button class="btn btn-primary btn-circle" title="Postular" type="button" onclick="location.href = '@Url.Action("ProcesoPostular", "Proceso", new { id = item.IdProceso })'; return false;">
                                                        <i class="fa fa-upload"></i>
                                                    </button>
                                                    <button class="btn btn-default btn-circle" title="Ver detalle orden" type="button" data-toggle="modal" href="#modal-form" onclick="fncDetalleReserva('@item.IdOrden');">
                                                        <i class="fa fa-list"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="ibox-content">
                            <div class="alert alert-info">
                                No existen Datos
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div id="modal-form" class="modal" style="z-index:10000!important;" aria-hidden="true" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-body">
                <div id="DatosOrden">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        function fncDetalleReserva(vIdOrden)
        {
            $.ajax({
                    url: '@Url.Content("~/Utils/Orden")?_idOrden=' + vIdOrden,
                    type: 'GET',
                    data: "",
                    contentType: 'application/json; charset=utf-8',
                    beforeSend: function(s, e) {
                        $("#DatosOrden").html("<img src=\"../../Imagen/loading.gif\" /><br />Procesando la información..");
                    },
                    success: function (data) {
                        $("#DatosOrden").html(data);
                        if ($("#DatosOrden").val() == null) {
                            $("#DatosOrden").html("No fue posible obtener los datos");
                        }
                    },
                    error: function (s, e) {
                        $("#DatosOrden").html("Ha ocurrido un error al momento de obtener los datos");
                    }
                });
        }
    </script>
    @if (ViewBag.Mensaje != "")
    {
        <script>
        swal({
            title: ("@ViewBag.Exito" != "False") ? "Felicidades!" :"Error!",
            text: fncReemplazaTilde("@ViewBag.Mensaje"),
            type: ("@ViewBag.Exito" != "False") ? "success" :"error"
        });
        </script>
    }
}

