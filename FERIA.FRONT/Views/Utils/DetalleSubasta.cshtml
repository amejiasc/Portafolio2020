@model FERIA.CLASES.Subasta
@if (Model.IdSubasta.Equals(0))
{
    <div class="alert alert-info">
        No fue posible obtener los datos de esta subasta
    </div>
}
else
{
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Detalle de Orden</h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-responsive-lg">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Fecha Oferta</th>
                                <th>Monto Oferta</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.DetalleSubasta)
                            {
                            <tr>
                                <td>@item.IdDetalle</td>
                                <td>@item.Fecha.ToString("dd-MM-yyyy")</td>
                                <td>@item.MontoOferta.ToString("#0,00")</td>
                                <td>@((Model.Estado) ? item.Estado : "ANULADO")</td>
                            </tr>
                            }
                        </tbody>
                    </table>                
                </div>
            </div>
        </div>
    </div>
}

