@model List<FERIA.CLASES.Subasta>
@{
    var Login = FERIA.FRONT.Helper.Autenticacion.TraerUsuarioAutenticado();
    ViewBag.Title = "Participar";
    Layout = "~/Views/Shared/_Interno.cshtml";
    if (ViewBag.Exito == null)
    {
        ViewBag.Exito = false;
    }
    if (ViewBag.Mensaje == null)
    {
        ViewBag.Mensaje = "";
    }
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Procesos en Subasta</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Sistema")">Inicio</a>
            </li>
            @*<li class="breadcrumb-item">
                    <a>Forms</a>
                </li>*@
            <li class="breadcrumb-item active">
                <strong>Listado de Subastas Activas</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <!--GRILLA DE RESULTADOS-->
            <div class="row">
                <div class="col-lg-12">
                    @if (Model.Count > 0)
                    {
                        <div class="ibox ">
                            <div class="ibox-title">
                                <h5>Resultado de Búsqueda </h5>
                            </div>
                            <div class="ibox-content">
                                <table class="table table-striped table-responsive-lg">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Fecha Inicio</th>
                                            <th>Fecha Termino</th>
                                            <th>Kilos</th>
                                            <th>Ofertas</th>
                                            <th>Accion</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (FERIA.CLASES.Subasta item in Model)
                                        {
                                            var proceso = new FERIA.FRONT.NEGOCIO.ServicioProceso().Leer(item.IdProceso, Login.SesionId);
                                            int Kilos = 0;
                                            if (proceso.Exito) {
                                                Kilos = proceso.Proceso.Orden.DetalleOrden.Sum(x => x.Cantidad);
                                            }
                                        <tr>
                                            <td>@item.IdSubasta </td>
                                            <td>@item.FechaSubasta.ToString("dd-MM-yyyy") </td>
                                            <td>@item.FechaTermino.ToString("dd-MM-yyyy") </td>
                                            <td>@Kilos.ToString("#0,00")  </td>
                                            <td>@item.DetalleSubasta.Count </td>
                                            <td>
                                                <button class="btn btn-primary btn-circle" title="Ofertar a Subasta" type="button" onclick="location.href = '@Url.Action("Ofertar", "Subasta", new { id = item.IdSubasta })'; return false;">
                                                    <i class="fa fa-upload"></i>
                                                </button>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="ibox-content">
                            <div class="alert alert-info">
                                No existen Datos
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @if (ViewBag.Mensaje != "")
    {
        <script>
        swal({
            title: ("@ViewBag.Exito" != "False") ? "Felicidades!" :"Error!",
            text: fncReemplazaTilde("@ViewBag.Mensaje"),
            type: ("@ViewBag.Exito" != "False") ? "success" :"error"
        });
        </script>
    }
}
