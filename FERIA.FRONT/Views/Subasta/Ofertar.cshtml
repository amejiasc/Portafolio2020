@model FERIA.CLASES.Subasta
@{
    ViewBag.Title = "Ofertar en Subasta";
    Layout = "~/Views/Shared/_Interno.cshtml";
    if (ViewBag.Exito == null)
    {
        ViewBag.Exito = false;
    }
    if (ViewBag.Mensaje == null)
    {
        ViewBag.Mensaje = "";
    }
    FERIA.FRONT.NEGOCIO.ServicioProducto servicioProducto = new FERIA.FRONT.NEGOCIO.ServicioProducto();
    FERIA.FRONT.NEGOCIO.ServicioProceso servicioProceso = new FERIA.FRONT.NEGOCIO.ServicioProceso();
    FERIA.CLASES.Usuario Login = FERIA.FRONT.Helper.Autenticacion.TraerUsuarioAutenticado();
    var productos = servicioProducto.Listar(Login.IdUsuario, Login.SesionId);
    var proceso = servicioProceso.Leer(Model.IdProceso, Login.SesionId).Proceso;
    var ganadas = proceso.Ofertas.Where(x => x.Estado.Equals("GANADA")).ToList();
     

}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Ofertar en Subasta</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Sistema")">Inicio</a>
            </li>
            @*<li class="breadcrumb-item">
                    <a>Forms</a>
                </li>*@
            <li class="breadcrumb-item active">
                <strong>Ofertando en Proceso</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <form role="form" name="frmOferta" id="frmOferta" method="post" action="@Url.Action("Ofertar", "Subasta", new FERIA.CLASES.DetalleSubasta())" autocomplete="off">
                @Html.AntiForgeryToken()
                <input type="hidden" name="IdSubasta" id="IdSubasta" value="@Model.IdSubasta" />
                <input type="hidden" name="IdUsuario" id="IdUsuario" value="@Login.IdUsuario" />
                <div class="row">
                    <div class="col-lg-12">
                        <div class="ibox ">
                            <div class="ibox-title">
                                <h5>@ViewBag.Title</h5>
                            </div>
                            <div class="ibox-content">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <h3 class="m-t-none m-b">Datos de la Subasta</h3>
                                        <div class="form-row">
                                            <div class="form-group col-lg-4">
                                                <label>Fecha Inicio</label>
                                                <input type="text" name="FechaProceso" id="FechaProceso" class="form-control disabled" readonly value="@Model.FechaSubasta.ToString("dd/MM/yyyy")" required />
                                            </div>
                                            <div class="form-group col-lg-4">
                                                <label>Fecha Termino</label>
                                                <input type="text" name="FechaFinProceso" id="FechaFinProceso" class="form-control disabled" readonly value="@Model.FechaTermino.ToString("dd/MM/yyyy")" required />
                                            </div>
                                            <div class="form-group col-lg-4">
                                                <label>N° Subasta</label>
                                                <input type="text" name="IdOrden" id="IdOrden" class="form-control disabled" readonly value="@Model.IdSubasta" required />
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-lg-4">
                                                <label>Tipos de Productos</label>
                                                <input type="text" name="Tipos" id="Tipos" class="form-control disabled" readonly value="@proceso.Orden.DetalleOrden.Count" required />
                                            </div>
                                            <div class="form-group col-lg-4">
                                                <label>Cantidad Total (KG)</label>
                                                <input type="text" name="Cantidad" id="Cantidad" class="form-control disabled" readonly value="@proceso.Orden.DetalleOrden.Sum(x => x.Cantidad).ToString("#0,00")" required />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <h3 class="m-t-none m-b">Detalle del Pedido</h3>
                                        <table class="table table-striped table-responsive-lg">
                                            <thead>
                                                <tr>
                                                    <th>Categoría</th>
                                                    <th>Cantidad Requerida (KG)</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    foreach (var item in proceso.Orden.DetalleOrden)
                                                    {
                                                        <tr>
                                                            <td>@item.NombreCategoria (@item.NombreIngles)</td>
                                                            <td>@item.Cantidad.ToString("#0,00")</td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                        <table class="table table-striped table-responsive-lg">
                                            <thead>
                                                <tr>
                                                    <th>Dirección</th>
                                                    <th>Región</th>
                                                    <th>Comuna</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    var servicio = new FERIA.FRONT.NEGOCIO.ServicioUsuario();
                                                    foreach (var item in ganadas)
                                                    {
                                                        var productor = servicio.LeerProductor(item.IdUsuario, Login.SesionId).Usuario;
                                                        var comuna = FERIA.FRONT.UtilConfig.Comunas().Where(x => x.IdComuna.Equals(productor.IdComuna)).FirstOrDefault();
                                                        <tr>
                                                            <td>@productor.Direccion</td>
                                                            <td>@comuna.NombreRegion</td>
                                                            <td>@comuna.NombreComuna</td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <h3 class="m-t-none m-b">Mi Oferta</h3>
                                        <div class="form-row">
                                            <div class="form-group col-lg-4">
                                                <label>Monto Oferta ($ PESOS) <i class="fa fa-money"></i></label>
                                                <input type="number" name="MontoOferta" id="MontoOferta" class="form-control" value="0" required />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class=" pull-right ">
                                            <button class="btn btn-default" type="button" onclick="location.href = '@Url.Action("Participar", "Subasta")';"><i class="fa fa-backward"></i><span class="bold"> Volver</span></button>
                                            <button class="btn btn-primary" type="button" onclick="fncSubmit();"><i class="fa fa-send"></i><span class="bold"> Enviar Oferta</span></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        function fncSubmit() {
            swal({
                title: "¿Confirma la operación?",
                text: "Esta a punto de enviar una oferta a la subasta seleccionada ¿Desea continuar?",
                type: "info",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Confirmar",
                closeOnConfirm: false
            }, function (isConfirm) {
                if (isConfirm) {
                    swal.close();
                    $("#loading").show();
                    document.frmOferta.submit();
                }
            });
        }
    </script>
    @if (ViewBag.Mensaje != "")
    {
        <script>
        swal({
            title: ("@ViewBag.Exito" != "False") ? "Felicidades!" :"Error!",
            text: fncReemplazaTilde("@ViewBag.Mensaje"),
            type: ("@ViewBag.Exito" != "False") ? "success" :"error"
        });
        </script>
    }

}