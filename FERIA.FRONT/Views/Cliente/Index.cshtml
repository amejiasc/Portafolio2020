@model List<FERIA.CLASES.Orden>
@{
    Layout = "~/Views/Shared/_Interno.cshtml";
    if (ViewBag.Exito == null)
    {
        ViewBag.Exito = false;
    }
    if (ViewBag.Mensaje == null)
    {
        ViewBag.Mensaje = "";
    }
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Ordenes</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Sistema")">Inicio</a>
            </li>
            @*<li class="breadcrumb-item">
                    <a>Forms</a>
                </li>*@
            <li class="breadcrumb-item active">
                <strong>Listado</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">            
            <!--GRILLA DE RESULTADOS-->
            <div class="row">
                <div class="col-lg-12">
                    <button class="btn btn-primary pull-right" type="button" onclick="location.href = '@Url.Action("Mantener", "Cliente")'; return false;"><i class="fa fa-plus"></i> <span class="bold">Nueva Orden</span></button>
                    @if (Model.Count > 0)
                    {
                        <div class="ibox ">
                            <div class="ibox-title">
                                <h5>Resultado de Búsqueda </h5>
                            </div>
                            <div class="ibox-content">
                                <table class="table table-striped table-responsive-lg">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Precio Venta ($)</th>
                                            <th>Fecha</th>
                                            <th>Firmó</th>
                                            <th>Fecha Firma</th>
                                            <th>Cantidad Detalle</th>
                                            <th>Estado</th>
                                            <th>Accion</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (FERIA.CLASES.Orden  item in Model)
                                        {
                                            string fechafirma = "-";
                                            if (item.FirmaContrato) {
                                                fechafirma = ((item.FechaFirmaContrato.Equals(DateTime.MinValue)) ? "-" : item.FechaFirmaContrato.ToString("dd-MM-yyyy"));
                                            }
                                        <tr>
                                            <td>@item.IdOrden </td>
                                            <td align="right">@item.PrecioVenta.ToString("#0,00") </td>
                                            <td>@item.FechaOrden.ToString("dd-MM-yyyy")</td>
                                            <td>@((item.FirmaContrato)?"SI":"NO") </td>
                                            <td>@fechafirma</td>
                                            <td>@item.DetalleOrden.Count </td>
                                            <td>@item.Estado  </td>
                                            <td>
                                                @if (item.Estado.Equals("PENDIENTE"))
                                                {
                                                    <button class="btn btn-default btn-circle" title="Editar Bus" type="button" onclick="location.href = '@Url.Action("Mantener", "Cliente", new { id = item.IdOrden })'; return false;">
                                                        <i class="fa fa-edit "></i>
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="ibox-content">
                            <div class="alert alert-info">
                                No existen Datos
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{   
    @if (ViewBag.Mensaje != "")
    {
        <script>
        swal({
            title: ("@ViewBag.Exito" != "False") ? "Felicidades!" :"Error!",
            text: fncReemplazaTilde("@ViewBag.Mensaje"),
            type: ("@ViewBag.Exito" != "False") ? "success" :"error"
        });
        </script>
    }
}